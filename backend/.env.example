# Application
APP_NAME=Recipe Image Platform
VERSION=1.0.0
DEBUG=True
API_V1_PREFIX=/api/v1

# Database
# For development, use SQLite (default)
DATABASE_URL=sqlite:///./recipe_platform.db

# For production, use PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/recipedb

DB_POOL_SIZE=10

# Redis (optional for MVP, set to False to disable)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_ENABLED=False

# NLP
SPACY_MODEL=en_core_web_sm
NLP_CONFIDENCE_THRESHOLD=0.5

# Paths
STATIC_DIR=backend/static
IMAGES_DIR=backend/static/images/techniques
TAXONOMY_PATH=backend/data/taxonomy/cooking_actions_taxonomy.json

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
